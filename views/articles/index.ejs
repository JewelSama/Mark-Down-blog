<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link rel="stylesheet" href="https://bootswatch.com/5/journal/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Blog Articles</h1>
        <a href="/articles/new" class="btn btn-success">New Article</a>
        
        <% articles.forEach(article => { %>
        
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-tit"><%= article.title %></h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= article.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-text mb-2"><%= articles.description %></div>
                    <a href="articles/<%= article.slug %>" class="btn btn-info">Read More</a>
                    <a href="articles/edit/<%= article.id %>?_method=PUT" class="btn btn-Success">Edit</a>
                    <form action="/articles/<%= article.id%>?_method=DELETE"  class="d-inline" method="post">
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </form>
                </div>
            </div>
        <%})%>

    </div>
</body>
</html>